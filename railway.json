{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 10,
    "healthchecks": {
      "readiness": {
        "path": "/",
        "initialDelaySeconds": 30
      }
    }
  },
  "variables": {
    "PORT": "3000",
    "NODE_ENV": "production"
  }
}
